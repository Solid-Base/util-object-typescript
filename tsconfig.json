{
    "compilerOptions": {
        "sourceMap": true,
        "module": "ESNext",
        "target": "ESNext",
        "jsx": "preserve",
        "moduleResolution": "node",
        "outDir": "./lib",
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "types": [
            "node"
        ],
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "allowJs": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
    ],
}